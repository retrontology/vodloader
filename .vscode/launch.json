    "version": "0.2.0",
    "configurations": [
        {
            "name": "Vodloader",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/app",
            "module": "vodloader.run",
            "python": "${workspaceFolder}/app/bin/python",
            "console": "integratedTerminal",
            "args": []
        },
        {
            "name": "Vodloader Debug",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/app",
            "module": "vodloader.run",
            "python": "${workspaceFolder}/app/bin/python",
            "console": "integratedTerminal",
            "args": ["-d"]
        },
        {
            "name": "Vodloader Windows",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/app",
            "module": "vodloader.run",
            "python": "${workspaceFolder}/app/Scripts/python",
            "console": "integratedTerminal",
            "args": []
        },
        {
            "name": "Vodloader Test",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/app",
            "module": "vodloader.test",
            "python": "${workspaceFolder}/app/.venv/bin/python",
            "console": "integratedTerminal",
            "args": [],
            "justMyCode": false,
        },

    ]
}